<div class="col-xs-5">
  <h2>Editing Book</h2>

  <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

      <div>
        <label class="">Title</label>
        <%= f.text_field :title, class:"form-control", rows:"3", placeholder:"title" %>
      </div>
      <div>
          <label class="">Opinion</label>
          <%= f.text_area :body, class:"form-control" %>
      </div>
      <br>

    <%= f.submit "Update Book", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Show", book_path(@book) %> |
  <%= link_to "Back", books_path %>

</div>



























