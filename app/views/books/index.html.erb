<div class="col-xs-3">
	<h2>User info</h2>
	<div class="profile_image">
	 <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
	</div>

	<table class="table">
		<tr>
		  <th>name</th><td><%= @user.name %></td>
		</tr>
		<tr>
		  <th>intro</th><td><%= @user.introduction %></td>
		</tr>
		</table>
		<%=link_to "edit", edit_user_path(@user.id), class: "btn btn-default" %>

	<h2>Newbook</h2>
	<%= form_for(@book)do |f| %>
	  <% if @book.errors.any? %>
			<div id="error_explanation">
			<h2><%= @book.errors.count %>error</h2>
			<ul><% @book.errors.full_messages.each do |message| %>
			 <li><%= message %></li>
			<% end %>
		  </ul>
			</div>
		<% end %>

	    <h5>Title</h5>
	    <label class="control-label sr-only">title</label>
	    <%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>

	    <h5>Opinion</h5>
	    <label class="control-label sr-only">opinion</label>
	    <%= f.text_area :body, class:"form-control", placeholder:"Opinion" %><br>

			<%= f.submit "Create Book", class: "btn btn-primary" %>
	<% end %>
</div>


<div class="col-xs-9">
  <h2>Books</h2>
	<table class="table">
	  <tr>
	  	<th></th><th>Title</th><th>Opinion</th>
	  </tr>

	    <% @books.each do |book| %>
	  	 <tr>
	  		<td><%= link_to user_path(book.user.id) do %><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %><% end %></td>
	  		<td><%=link_to book.title, book_path(book.id) %></td>
	  		<td><%= book.body %></td>

	  	 </tr>

	     <% end %>
	 </table>

 </div>