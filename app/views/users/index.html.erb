<div class="col-xs-3">
	<h2>User info</h2>
	  <div class="profile_image">
		<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
	  </div>

	<table class="table">
			  <tr>
			    <th>name</th><td><%= @user.name %></td>
			  </tr>
			  <tr>
			    <th>intro</th><td><%= @user.introduction %></td>
			  </tr>
	</table>
	<%=link_to "edit", edit_user_path(@user.id), class: "btn btn-default" %>




	<h2>New book</h2>
		<%= form_for(@book) do |f| %>
		  <% if @book.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
		      <ul>
		      <% @book.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>

      <h5>Title</h5>
      <label class="control-label sr-only">title</label>
      <%= f.text_field :title, class:"form-control" %>

      <h5>Opinion</h5>
      <label class="control-label sr-only">opinion</label>
      <%= f.text_area :body, class:"form-control" %><br>
		  <%= f.submit "Create Book", class: "tn btn-primary" %>
		<% end %>
</div>


<div class="col-xs-9">
	  <h2>Users</h2>
	  <table class="table">
	  	<tr>
	  		<th>image</th><th>name</th><th></th>
	  	</tr>

	    <% @users.each do |user| %>
	  	<tr>
	  		<td><%= attachment_image_tag user,:profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %></td>
	  		<td><%= user.name %></td>
	  		<td><%=link_to "Show", user_path(user.id) %></td>
	  	</tr>

	    <% end %>
	  </table>

 </div>
