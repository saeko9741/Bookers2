<%= flash[:notice] %>

<div class="col-xs-3">
 <h2>User info</h2>
	<table class="table">
	  <div class="profile_image">
		　<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
	  </div>
		<tr>
			<th>name</th><td><%= @user.name %></td>
		</tr>
		<tr>
			<th>intro</th><td><%= @user.introduction %></td>
		</tr>
	</table>
	<% if @user == current_user %>
		<%=link_to "edit", edit_user_path(@user.id), class: "btn btn-default" %>
	<% else %>
		<%=link_to "",user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
	<% end %>


 <h2>New book</h2>
	<%= form_for(@book) do |f| %>
	  <% if @book.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
		      <ul>
		      　<% @book.errors.full_messages.each do |message| %>
		        　<li><%= message %></li>
		      　<% end %>
		      </ul>
		    </div>
		  <% end %>

		  <h5>Title</h5>
		  <label class="control-label sr-only">Title</label>
		  <%= f.text_field :title %>

		  <h5>Opinion</h5>
		  <label class="control-label sr-only">Opinion</label>
		  <%= f.text_area :body %>
		  <br>
			<%= f.submit "Create Book", class: "btn btn-primary" %>
		<% end %>
</div>


<div class="col-xs-9">
	  <h2>Books</h2>
	  <table class="table">
	  	<tr>
	  		<th></th><th>title</th><th>opinion</th>
	  	</tr>
	    <% @books.each do |book| %>
	  	<tr>
	  		<td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %></td>
	  		<td><%=link_to book.title, book_path(book.id) %></td>
	  		<td><%= book.body %></td>
	  	</tr>
	    <% end %>
	  </table>
 </div>














